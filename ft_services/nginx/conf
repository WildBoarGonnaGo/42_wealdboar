server {
    listen 80;
    listen [::]:80;
    server_name _;
    return 301 https://192.168.99.105$request_uri;
}

server {
    listen 443 ssl ;
    listen [::]:443 ssl ;
    root /var/www/;
    server_name _;
    ssl_certificate /etc/ssl/certs/lchantel.crt;
    ssl_certificate_key /etc/ssl/private/lchantel.key;
    index index.html;
    location / {
        autoindex on;
        try_files $uri $uri/ =404;
    }
}
